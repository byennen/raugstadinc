- title "Builders"

%table
  %tr
    %th Name
    %th Bio
    %th Email
    
  - for builder in @builders
    %tr
      %td= builder.name
      %td= builder.bio
      %td= builder.email
      %td= link_to "Edit", edit_admin_builder_path(builder)
      %td= link_to "Remove", admin_builders_path(builder), :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Builder", new_admin_builder_path
