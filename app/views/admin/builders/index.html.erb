<% title "Builders" %>

<table>
  <tr>
    <th>Name</th>
    <th>Bio</th>
    <th>Email</th>
  </tr>
  <% for builder in @builders %>
    <tr>
      <td><%= builder.name %></td>
      <td><%= builder.bio %></td>
      <td><%= builder.email %></td>
      <td><%= link_to "Show", admin_builder %></td>
      <td><%= link_to "Edit", edit_admin_builder_path(builder) %></td>
      <td><%= link_to "Destroy", admin_builder, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Builder", new_admin_builder_path %></p>
